#cloud-config
autoinstall:
  version: 1
  apt:
    geoip: true
    preserve_sources_list: false
    primary:
    - arches: [amd64, i386]
      uri: http://fr.archive.ubuntu.com/ubuntu
    - arches: [default]
      uri: http://ports.ubuntu.com/ubuntu-ports
  identity:
    hostname: ubuntu1
    password: $6$duEHBYk5nN.Y..li$7tDiF5DiwfRdLma6tnoX6irgWufb.o1DWlBUgUT2M6vxYygA9i0afbrVqIgFqbxSPZuIMsFiJoFx0xH8.dNlc.
    realname: Ubuntu
    username: ubuntu
  keyboard:
    layout: fr
    toggle: null
    variant: ''
  locale: en_US
  network:
    ethernets:
      enp0s3:
        dhcp4: true
    version: 2
  snaps:
    prometheus: !!python/object:subiquity.models.snaplist.SnapSelection {channel: stable, is_classic: false}
  ssh:
    allow-pw: true
    authorized-keys: ["ssh-rsa  plawson@DESKTOP-EQI7VI4"]
    install-server: true
  storage:
    config:
    - type: disk
      id: disk-sda
      ptable: gpt
      serial: VBOX_HARDDISK_VB40a87de8-39534d07
      path: /dev/sda
      wipe: superblock
      preserve: false
      name: ''
      grub_device: true
    - type: partition
      id: partition-0
      device: disk-sda
      size: 1048576
      flag: bios_grub
      number: 1
      preserve: false
    - type: partition
      id: partition-1
      device: disk-sda
      size: 1073741824
      wipe: superblock
      flag: ''
      number: 2
      preserve: false
    - type: format
      id: format-0
      fstype: ext4
      volume: partition-1
      preserve: false
    - type: partition
      id: partition-2
      device: disk-sda
      size: 20397948928
      wipe: superblock
      flag: ''
      number: 3
      preserve: false
    - type: lvm_volgroup
      id: lvm_volgroup-0
      name: ubuntu-vg
      devices: [partition-2]
      preserve: false
    - type: lvm_partition
      id: lvm_partition-0
      name: ubuntu-lv
      volgroup: lvm_volgroup-0
      size: 20396900352B
      preserve: false
    - type: format
      id: format-1
      fstype: ext4
      volume: lvm_partition-0
      preserve: false
    - type: mount
      id: mount-1
      device: format-1
      path: /
    - type: mount
      id: mount-0
      device: format-0
      path: /boot
  late-commands:
  - 'echo "mcs ALL=(ALL) NOPASSWD: ALL" > /target/etc/sudoers.d/ubuntu'
  - chmod 440 /target/etc/sudoers.d/ubuntu
  - curtin in-target -t /target -- /bin/bash apt update -y
  - curtin in-target -t /target -- /bin/bash apt upgrade -y
  - curtin in-target -t /target -- /bin/bash iptables -A INPUT -p tcp --dport 3389 -j ACCEPT
  - curtin in-target -t /target -- /bin/bash apt ubuntu-desktop -y
  packages:
    - build-essential
    - net-tools
  error-commands:
    - tar c /var/log/installer | nc 192.168.1.100 5005
